<h1> Infomacion de Contacto </h1>
<p>
  <%= link_to 'ver contactos', client_contacts_path(@client) %> | <%= link_to 'ver facturas emitidas', client_invoices_path(@client) %>
  <hr>
</p>


<p id="notice"><%= notice %></p>

<p>
  <strong>Nombre:</strong>
  <%= @client.name %>
</p>

<p>
  <strong>Apellido:</strong>
  <%= @client.surname %>
</p>

<p>
  <strong>Fecha de nacimiento:</strong>
  <%= @client.birthday %>
</p>

<p>
  <strong>Genero:</strong>
  <%= @client.gender %>
</p>

<p>
  <strong>tipo de documento:</strong>
  <%= @client.kind_document %>
</p>

<p>
  <strong>Documento:</strong>
  <%= @client.document %>
</p>

<p>
  <strong>Cuil/Cuit:</strong>
  <%= @client.cuil_cuit %>
</p>

<p>
  <strong>Edad:</strong>
  <%= @age %>
</p>
<hr>
<h2>Facturacion por año:</h2>
  <% @invoicing_year.each do | key, value | %>
    <p> <%= "En el año #{key} el cliente facturó #{value}" %></p>
  <% end %>
<hr>
<h2>Cantidad de facturas por mes de este año:</h2>
  <% @cant_invoices.each do | key, value | %>
    <p> <%= "En el mes #{key} el cliente emitió #{value} facturas" %></p>
  <% end %>
<hr>
<h2>Personas a las que mas facturas les facturó:</h2>
  <% @top_per_count.each do | key, value | %>
    <p> <%= "A la persona, #{key.name}, se le facturó #{value} facturas" %></p>
  <% end %>
<hr>
<h2>Personas a las que mas facturó por monto:</h2>
  <% @top_per_amount.each do | key, value | %>
    <p> <%= "A la persona, #{key.name}, se le facturó un total de #{value} pesos"  %></p>
  <% end %>
<hr>


<%= link_to 'Editar', edit_client_path(@client) %> |
<%= link_to 'Volver', clients_path %>
