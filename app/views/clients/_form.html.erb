<%= form_for(@client) do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% @client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :apellido %><br>
    <%= f.text_field :surname %>
  </div>
  <div class="field">
    <%= f.label :fecha_de_nacimiento %><br>
    <%= f.date_select(:birthday, { start_year: 1930, end_year: Date.today.year }) %>
  </div>
  <div class="field">
    <%= f.label :genero %><br>
    <%= f.select(:gender) do %>
      <% array = [ ["Masculino", "Masculino"], ["Femenino", "Femenino"] ] %>
      <%= options_for_select(array) %>
    <% end %> 
  </div>
  <div class="field">
    <%= f.label :tipo_de_documento %><br>
    <%= f.select(:kind_document) do %>
      <% array = [ ["DNI", "DNI"], ["LE", "LE"], ["LC", "LC"] ] %>
      <%= options_for_select(array) %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :numero_de_documento %><br>
    <%= f.number_field :document %>
  </div>
  <div class="field">
    <%= f.label :Cuil_Cuit %><br>
    <%= f.text_field :cuil_cuit %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
