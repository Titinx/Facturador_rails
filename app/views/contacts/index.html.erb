<p id="notice"><%= notice %></p>

<h1>Lista Contactos</h1>

<table>
  <thead>
    <tr>
      <th>Tipo de contacto</th>
      <th>Detalle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.kind %></td>
        <td><%= contact.data %></td>
        <td><%= link_to 'Show', client_contact_path(@client, contact) %></td>
        <td><%= link_to 'Edit', edit_client_contact_path(@client, contact) %></td>
        <td><%= link_to 'Destroy', client_contact_path(@client, contact), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Contacto', new_client_contact_path(@client) %> | <%= link_to 'Volver al cliente', client_path(@client) %>
