<p id="notice"><%= notice %></p>

<h1>Listado de Facturas</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Monto</th>
      <th>Fecha de emision</th>
      <th>Destinatario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.description %></td>
        <td><%= invoice.amount %></td>
        <td><%= invoice.date %></td>
        <td><%= invoice.person.name %>, <%= invoice.person.cuil_cuit %> </td>
        <td><%= link_to 'Mostrar', client_invoice_path(@client, invoice) %></td>
        <td><%= link_to 'Editar', edit_client_invoice_path(@client, invoice) %></td>
        <td><%= link_to 'Eliminar', client_invoice_path(@client, invoice), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva factra', new_client_invoice_path(@client) %> | 
<%= link_to 'Volver', client_path(@client) %> 
