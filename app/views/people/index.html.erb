<p id="notice"><%= notice %></p>

<h1>Listado de personas</h1>

<table>
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Fecha de nacimiento</th>
      <th>Genero</th>
      <th>Tipo de documento</th>
      <th>Documento</th>
      <th>Cuil/Cuit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.kind_person %></td>
        <td><%= person.name %></td>
        <td><%= rellenar(person.surname) %></td>
        <td><%= person.birthday %></td>
        <td><%= rellenar(person.gender) %></td>
        <td><%= rellenar(person.kind_document) %></td>
        <td><%= rellenar(person.document) %></td>
        <td><%= person.cuil_cuit %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Home', home_path %> | <%= link_to 'Nueva Persona', new_person_path %>
